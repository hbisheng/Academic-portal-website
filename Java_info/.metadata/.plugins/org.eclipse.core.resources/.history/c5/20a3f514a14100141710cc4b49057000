<% 
	int media_id=-1;
	if(request.getParameter("id")!=null)
		media_id = Integer.parseInt(request.getParameter("id"));
	JdbcDao jdbc = new JdbcDao();
	
	Media media=null;
	if(media_id != -1)
		media = jdbc.getMedia(media_id);

	if(media != null)
	{
		if(media.type==1)
		{
			%><h2>图片资源</h2><%
			%><%=media.url%><%
			%><%=media.content%><%
		}
		else if(media.type==2)
		{
			%><h2>音频资源</h2><%
			%><%=media.url%><%
			%><%=media.content%><%
		}
		if(media.type==3)
		{
			%><h2>视频资源</h2><%
			%><%=media.url%><%
			%><%=media.content%><%
		}
	}
%>


