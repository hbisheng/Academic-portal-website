<%	
	List<Integer> c= jdbc.getMediaIndex(0);
	int cnt = 0;
	if(c!=null){
		%><tr><%
		
		for(Integer i : c)
		{ 
			++cnt;
			Media media = jdbc.getMedia(i);
			%><td><%=media.content %></td><%		
			%><td><%=media.url %></td><%
			%><td><%=media.type%></td><%
